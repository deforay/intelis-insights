# App Database (reports, chat sessions, users)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=intelis_insights
DB_USER=root
DB_PASSWORD=

# Query Database (vlsm â€” where LLM-generated SQL executes)
# Falls back to DB_USER / DB_PASSWORD if not set
QUERY_DB_NAME=vlsm
# QUERY_DB_USER=root
# QUERY_DB_PASSWORD=

# LLM Sidecar (~/www/llm-sidecar)
LLM_SIDECAR_URL=http://127.0.0.1:3100
LLM_SIDECAR_SECRET=
LLM_DEFAULT_MODEL=sonnet

# RAG Sidecar
RAG_BASE_URL=http://127.0.0.1:8089
RAG_ENABLED=true

# Qdrant
QDRANT_URL=http://127.0.0.1:6333
QDRANT_COLLECTION=intelis_insights

# App
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=UTC
